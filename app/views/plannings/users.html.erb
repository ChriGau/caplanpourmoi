
<%= render 'shared/planningsteps', locals: {planning: @planning} %>


<div class="row">
  <div class="roles-decrement">
    <h1> Roles </h1>

  </div>
</div>

<div class="row">
  <div class="users">

    <%= simple_form_for (@planning) do |f| %>
    <% @users.each do |user| %>

    <div class="col-xs-12 col-sm-4 col-md-6 col-lg-4">
      <div
      class="card choice <%= @planning.users.include?(user) ? "active" : "" %> "
      >
      <label >
        <input
        class="checkbox"
        type="checkbox"
        name="planning[user_ids][]"
        value="<%= user.id %>"
        <%= @planning.users.include?(user) ? "checked" : "" %>
        />
        <div class="first-name">
          <%= user.first_name.capitalize! %>
        </div>
        <div class="roles">
          <p class="role">Roles</p>
          <p class="user-role">
            <% user.roles.each do |role|  %>
            <span class="role-name" style=" background-color: <%= role.role_color %>" >
              <%= role.name.capitalize! %>
            </span>
            <% end %>
          </p>
        </div>
      </label>
    </div>
  </div>
  <% end %>
</div>
  <%= f.submit "Next", class: "btn btn-primary" %>
<% end %>

<script>
  $(document).ready(function(){
    $(".checkbox").change(function(){
      $(this).parent().parent().toggleClass("active");
    });
  });
</script>
</div>


