
<div id="planning-list" class="frame">
  <ul class="slidee">
    <% @plannings.each do |planning| %>
      <li class="<%= planning_slide_class(planning)%>">
         <%= planning_link(planning) do %>
          <%= planning_slide_label(planning) %>
        <% end %>
        <p> <%= planning.status %> </p>
      </li>
    <% end %>
  </ul>
</div>

<div class="row">
  <div class="col-xs-9">
    <div class="user-list">
      <h2>My Resources</h2>
      <%= link_to 'create_user', new_user_registration_path  %>
      <br>
      <ul>
        <% @users.each do |user| %>
       <p><%= user.email %></p>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col-xs-3">
    <div class="role-list">
      <h2>My Roles</h2>
      <br>
      <ul>
      <%= link_to 'Create new role', new_role_path , :class=> "btn btn-info" %>
        <br><br>
        <%  @slot_templates.each do |slot| %>
        <button class="btn" style="margin: 5px; border-color: grey; background-color: <%= Role.find_by_id(slot.role_id).role_color %>; border-radius: 6px;"> <%= slot.role.name %> </button>
        <% end %>
      </ul>
    </div>
  </div>




