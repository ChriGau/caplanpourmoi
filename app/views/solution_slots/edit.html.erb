<%= simple_form_for [@planning, @solution_slot] do |f| %>
  <%= f.error_notification %>

    <div class="row">
      <div class="col-xs-12">
        <!-- creation du tableau -->
        <div class="col-xs-12">
        <!-- en-tÃªtes -->
          <div class="row">
            <div class="col-xs-2">
              <b>User</b>
            </div>
            <div class="col-xs-2">
              <b>Skilled?</b>
            </div>
            <div class="col-xs-2">
              <b>Status</b>
            </div>
            <div class="col-xs-2">
              <b>h/day</b>
            </div>
            <div class="col-xs-2">
              <b>h/week</b>
            </div>
            <div class="col-xs-2">
              <b></b>
            </div>
          </div>

          <% @users_infos.each do |hash| %>
            <% if User.find(hash.keys.first) == @assigned_user  %>
              <div class="row assigned-user-row" id="status-user-<%= User.find(hash.keys.first).id %>">
            <% else %>
              <div class="row row-user" id="status-user-<%= User.find(hash.keys.first).id %>">
            <% end %>
              <div class="col-xs-2">
               <%= profile_picture(User.find(hash.keys.first)) %>
              </div>
              <div class="col-xs-2">
                <% if hash.values.first[:skilled] == true %>
                  <i class="fa fa-check-circle" style="color: green;"></i>
                <% else %>
                  <i class="fa fa-exclamation-triangle"></i>
                <% end %>
              </div>
              <div class="col-xs-2" >
                <!-- button -->
                <%= hash.values.first[:status] %>
              </div>
              <div class="col-xs-2">
                <!-- nb hours day -->
                <%= hash.values.first[:nb_hours_day] %>
              </div>
              <div class="col-xs-2">
                <!-- nb hours week -->
                <%= hash.values.first[:nb_hours_planning] %>
              </div>
              <div class="col-xs-2">
                <!-- reassign -->

                <%= link_to "assign", planning_solution_slot_path(@planning, @solution_slot, user_id: User.find(hash.keys.first).id), method: :patch, class: "mybtn mybtn--medium reassign-solution_slot", id:"#{User.find(hash.keys.first).id}" %>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>

 <% end %>

<!-- ___________________________ JS __________________________________ -->
  <%= content_for(:after_js) do %>
    <script>
      // for CSS use => add Class too the assigned user row
      // on ajoute #status-user-"assigned user id" => Add class .assigned-user-row
      var assigned_user_id = <%= @assigned_user.id %>
      console.log("assigned_user_id = " + assigned_user_id);
      var d = document.getElementById("status-user-" + assigned_user_id);
      d.className += ".assigned-user-row";

    </script>

  <% end %>
