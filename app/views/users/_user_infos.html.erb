
  <div class="row">
    <% @user.roles.each do |role| %>
      <button class="btn" style="width: 130px; margin: 5px; border-color: $mygrey; background-color: <%=  role.color.hexadecimal_code %>; border-radius: 6px; <%= background_text_color_role(role)%>"> <%= role.name.capitalize %>
       <button class="btn delete-role <%= "user"+@user.id.to_s %> <%= "roleuser"+RoleUser.find_by(user_id: @user.id, role_id: role.id).id.to_s %> <%= "role"+role.id.to_s %>" aria-hidden="true">-</button>
      </button>
      <% end %>
    <% if @user.roles.count != Role.all.count %>
      <i class="fa fa-plus" aria-hidden="true"></i>
    <% end %>
  </div>

<div class="modal fade modal-role-user modal-events" tabindex="-1" role="dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Ajouter un rôle</h4>
    </div>
    <div class="modal-body">
        <%= render 'role_users/form' %>
    </div>
  </div>
</div>

