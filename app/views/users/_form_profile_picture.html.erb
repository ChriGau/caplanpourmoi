<%= simple_form_for(resource, as: resource_name ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <label class="custom-file-upload">
      <span class="custom-file-upload-btn">
        <i class="fa fa-cloud-upload"></i> Votre avatar
      </span>
      <%= f.input :profile_picture, as: :attachinary, placeholder: "chemin image", label: false %>
    </label>
  </div>

  <div class="form-actions">
    <%= f.submit "Valider", class: "btn btn-success" %>
  </div>
<% end %>

