<div class="wrap-week-tag">
  <div class="week-tag <%= planning_slide_class(@planning) %>" >
      <p>S<%= @planning.week_number %></p>
  </div>
</div>

<% set_step_status %>
<div class="row">
  <div class="steps">
    <div class="col-xs-2 step <%= @set_status1 %>">
        <div class="step-num text-center">Etape 1</div>
        <div class="progress"><div class="progress-bar"></div></div>
        <%= link_to "", planning_skeleton_path(@planning), class: "dot" %>
        <div class="comment text-center">Organisation de la semaine</div>
        <div class="triangle hide"></div>
    </div>
    <div class="col-xs-2 step <%= @set_status2 %>">
        <div class="step-num text-center">Etape 2</div>
        <div class="progress"><div class="progress-bar"></div></div>
        <%= link_to "", planning_users_path(@planning), class: "dot" %>
        <div class="comment text-center">Votre Ã©quipe pour la semaine</div>
        <div class="triangle hide"></div>
    </div>
        <div class="col-xs-2 step <%= @set_status3 %>">
        <div class="step-num text-center">Etape 3</div>
        <div class="progress"><div class="progress-bar"></div></div>
        <%= link_to "", planning_compute_solutions_path(@planning), class: "dot" %>
        <div class="comment text-center">Vos solutions</div>
        <div class="triangle hide"></div>
    </div>
    <div class="col-xs-2 step <%= @set_status4 %>">
        <div class="step-num text-center">Etape 4</div>
        <div class="progress"><div class="progress-bar"></div></div>
        <%= link_to "", planning_conflicts_path(@planning), class: "dot" %>
        <div class="comment text-center">Votre planning</div>
        <div class="triangle hide"></div>
    </div>
  </div>
  <div class="col-xs-3">
      <%= @button_link %>
  </div>

</div>



<%= content_for(:after_js) do %>
<script>
  $(".active > .triangle").removeClass('hide')
  $(".active > .triangle").addClass('show')
</script>
<% end %>
