<div class="navbar-wagon">
  <!-- Logo -->

 <a href="/" class="navbar-wagon-brand navbar-wagon-item">
   <%= image_tag "logo-lr.png", alt: "Logo Ca Plane Pour Moi"%>
 </a>


 <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
      <!-- Avatar with dropdown menu -->
      <% if current_user.is_owner? %>
        <%= link_to statistics_algo_path do  %>
          <button class="btn-primary btn-nav mr-">
            <i class="fa fa-bar-chart"></i> <%= t("navbar.statistics", default: "Statitics") %>
          </button>
        <% end %>
        <%= link_to users_path do %>
          <button class="btn-primary btn-nav">
            <i class="fa fa-users"></i>  <%= t("navbar.users", default: "Users") %>
          </button>
        <% end %>
      <% end %>
        <div class="navbar-wagon-item">
          <div class="dropdown">
            <% if current_user.profile_picture? %>
              <%= cl_image_tag current_user.profile_picture.path, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <% else %>
              <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <% end %>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to plannings_path do %>
                  <i class="fa fa-home"></i>  <%= t("navbar.homepage", default: "Home") %>
                <% end %>
              </li>
              <li>
                <%= link_to user_path(current_user)  do %>
                  <i class="fa fa-user"></i> <%= t("navbar.profile", default: "Profil") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t("navbar.sign_out", default: "Log out") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% else %>
      <!-- Login link (when logged out) -->

      <div>
        <%= link_to t(".sign_up", default: "S'inscrire"), new_user_registration_path, class: "form-actions btn-primary btn-nav btn-block" %>
      </div>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <% if user_signed_in? && current_user.profile_picture?   %>
              <%= cl_image_tag current_user.profile_picture.path, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <% else %>
              <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <% end %>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
          <li>
            <%= link_to plannings_path do %>
              <i class="fa fa-home"></i>  <%= t("navbar.homepage", default: "Home") %>
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user)  do %>
              <i class="fa fa-user"></i> <%= t("navbar.profile", default: "Profile") %>
            <% end %>
          </li>
          <% if current_user.is_owner? %>
            <li>
              <%= link_to users_path do %>
                <i class="fa fa-users"></i>  <%= t("navbar.users", default: "Users") %>
              <% end %>
            </li>
            <li>
              <%= link_to statistics_algo_path do %>
                <i class="fa fa-bar-chart"></i> <%= t("navbar.statistics", default: "Statitics") %>
              <% end %>
            </li>
          <% end %>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t("navbar.sign_out", default: "Log out") %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>



