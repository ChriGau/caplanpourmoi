<%= render 'shared/planningsteps', locals: {planning: @planning, url: @url} %>

<div class="wrap-plan">

  <div class="panel-group" id="accordion">
  <% @compute_solutions.each_with_index do |compute_sol, index| %>
    <div class="panel panel-default">
      <a data-toggle="collapse" data-parent="#accordion" href="#<%=compute_sol.id%>">
        <div class="panel-heading sol-head">
          <h4 class="panel-title" id="sol-list">
            <span class="sol-status label label-<%= compute_sol.ready? ? "success" : compute_sol.error? ? "danger" : "info" %>"> <%= t("compute_solution.status.#{compute_sol.status}") %></span>
            <div class="computation-title">Calcul du <%= l compute_sol.created_at, format: :short %>
            </div>
            <% if compute_sol.pending? %>
              <div><i class="fa fa-spinner fa-pulse"></i></div>
            <% end %>
          </h4>

        </div>
      </a>
      <div id="<%= compute_sol.id %>" class="panel-collapse collapse <%="in" if index == 0 %>">
        <div class="panel-body">
          <div class="list-group">
            <% (1..10).each do |item| %>
              <div class="list-group-item sol-item">
                <div class="sol-title">Solution nÂ°<%= item %></div>
                <button class="btn-primary sol-btn"><i class="fa fa-eye"></i></button>
                <button class="btn-primary sol-btn"><i class="fa fa-check-circle"></i></button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    </div>

<br>
<br>
<br>

</div>

